import java.util.*;
public class exer5 {
	public static void main(String[] args) {
		Scanner in = new Scanner(System.in);
		
		
		int i, num= 0;
		int a[] = new int[3];
		int b[] = new int[3];
		
		for(i=0; i<1; i++) {
			System.out.println("Insira os valores ");
			a[i] = in.nextInt();
		}
		
		for(i=0; i<3; i++) {
			num++;
			for(i=0;i<a[i];i++ ) {
			if(a[i]%2 == 0 ) {
				b[i] = num;
				System.out.print(b[i]+",");
			}
			}
			
			
			
			
		}
		
		
		
		
		
		
		

	}

}
