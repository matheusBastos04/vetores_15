import java.util.*;

public class exer7 {

	public static void main(String[] args) {
		Scanner in = new Scanner(System.in);	
		
		int a[] = new int[3];
		int b[] = new int[11];
		int i, fat;
		
		
		for(i=0; i<3; i++) {
			System.out.println("Insira os numeros");
			a[i] = in.nextInt();
		}
		
		for(i=0; i<3; i++) {
			for(i=0; i<a[i];i++) {
				fat= a[i]*i;
				b[i] = fat;
				System.out.println("O fatorial de: "+a[i]+" é: "+b[i]);
			}
			
			
		}
		
		
		
		
		

	}

}
